<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_birth_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth Year: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_skin_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skin Color: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_eye_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye Color: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:textSize="16sp" />
</LinearLayout>
